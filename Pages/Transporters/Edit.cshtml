@page
@model MyTransportationApp.Pages.Transporters.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Transporter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Transporter.ID" />
            <div class="form-group">
                <label asp-for="Transporter.TransporterName" class="control-label"></label>
                <input asp-for="Transporter.TransporterName" class="form-control" />
                <span asp-validation-for="Transporter.TransporterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transporter.CountryID" class="control-label"></label>
                <select asp-for="Transporter.CountryID" class="form-control" asp-items="ViewBag.CountryID"></select>
                <span asp-validation-for="Transporter.CountryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
