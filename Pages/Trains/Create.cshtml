@page
@model MyTransportationApp.Pages.Trains.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Train</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
