            </div>
            <div class="form-group">
                <label asp-for="Train.TransporterID" class="control-label"></label>
                <select asp-for="Train.TransporterID" class ="form-control" asp-items="ViewBag.TransporterID"></select>
                <span asp-validation-for="Train.TransporterID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

